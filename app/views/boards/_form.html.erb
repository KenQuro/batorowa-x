<%= render 'shared/error_messages' %>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_with(model: board, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :title, '募集タイトル' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :platform, 'プラットフォーム条件' %>
        <%= f.select :platform, [ ["なんでもOK", "なんでもOK"],["PC", "PC"], ["PS4 or Xbox", "PS4 or Xbox"], ["Switch", "Switch"], ["Mobile", "Mobile"]], {}, { class: 'form-control' } %>
      </div>

      <div class="form-group">
        <%= f.label :content, '本文' %>
        <%= f.text_area :content, class: 'form-control', rows: 5 %>
      </div>

      <div class="form-group">
        <span>タグ</span>
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
          <div class="form-check">
            <%= tag.label class: 'form-check-label' do %>
              <%= tag.check_box class: 'form-check-input' %>
              <%= tag.text %>
            <% end %>
          </div>
        <% end %>
      </div>
      <%= f.submit '募集する', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>
