<div class="card" style="width: 100%">
  <div class="card-body">
    <div class="row">
      <div class="col-md-3 text-center border-right align-middle">
      <%= link_to user_path(board.user.id) do %>
        <%= render partial: '/users/user_image', locals: { user: board.user } %>
      <% end %>
        <p class="pt-2"><%= link_to board.user.name, user_path(board.user) %></p>
        <img src="<%= platform_image(board.user) %>" alt="プラットフォームの画像"　width="60px" height="60px">
      </div>
      <div class="col-md-9 pl-4">
        <span class="small text-muted"><%= time_ago_in_words(board.created_at) %>前</span>
        <div>
          <h5 class="card-title mb-0"><%= board.title %></h5>
        </div>
        <div>
          <% board.tags.each do |tag| %>
            <span class="badge badge-primary"><%= tag.name %></span>
          <% end %>
        </div>
        <p class=" card-subtitle mt-2 mb-2 text-muted">プラットフォーム：<%= board.platform %></p>
        <p class="card-text mt-3"><%= safe_join(board.content.split("\n"), tag(:br)) %></p>
        <div class="text-right">
          <p class="mb-0"><%= link_to image_tag('comment.png'), board %><span class="badge badge-secondary"><%= board.comments.count %></span><p>
        </div>
      </div>
    </div>
  </div>
</div>
