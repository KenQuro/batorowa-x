<div class="row">
  <div class="col-lg-8 offset-lg-2">
    <%= link_to '募集一覧に戻る', boards_path, class: 'btn btn-outline-dark mt-3 mb-3' %>
    <% if @current_user == @board.user %>
      <%= link_to '編集', edit_board_path(@board), class: 'btn btn-outline-dark' %>
      <%= link_to '削除', board_path(@board.id), class: 'btn btn-outline-dark', method: :delete %>
    <% end %>
    <% if flash[:notice] %>
      <div class="alert alert-primary"><%= flash[:notice] %></div>
    <% end %>
    <%= render @board %>
    <div class="p-comment__list">
      <div class="p-comment_listTitle">コメント</div>
      <%= render @board.comments %>
    </div>

    <%= render partial: 'comments/form', locals: { comment: @comment } %>
  </div>
</div>
